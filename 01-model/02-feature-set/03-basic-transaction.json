{
  "name": "basic-transaction",
  "description": "Transactions detail with relation to account",
  "kind": "feature-set",
  "spec": {
      "targets": ["parquet"],
      "entities": [
        {
          "name": "transaction-id",
          "description": "Unique transaction identificator",
          "type": "string"
        }
      ],
      "features": [
        {
          "name": "account-id",
          "description": "Relation to account identificator",
          "type": "string"
        },
        {
          "name": "party-id",
          "description": "Relation to party identificator",
          "type": "string"
        },
        {
          "name": "transaction-value",
          "description": "Transaction value",
          "type": "double"
        },
        {
          "name": "transaction-currency",
          "description": "Transaction currency",
          "type": "string"
        },
        {
          "name": "transaction-date",
          "description": "Transaction date",
          "type": "timestamp"
        },
        {
          "name": "record-date",
          "description": "The date when the record was created",
          "type": "timestamp"
        }
      ]
    }
}